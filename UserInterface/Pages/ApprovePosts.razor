@page "/approve-post"
@using Model.Models
@using Model.DTOs
@using System.Net.Http
@using System.Net.Http.Json

@inject HttpClient http;
@attribute [Authorize(policy: "RequireAuthenticatedUser", Roles = "Superadmin")]
@layout MainLayout

<PageTitle>Approve Posts</PageTitle>
<Navbar ShowNavBar="showNavBar" />

<section>
    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>ApprovePosts</title>
</head>
<body>
       
    <div class="header-Details">
        <h2>Learn What's Best</h2>
        <p>"Educate & Elevate: Navigating the Path to Enlightenment.”
        </p>
        <hr>
      </div> <!--header-Details-->

      <div class="page-name">
        <h1>Approve Posts</h1>
        <hr>
      </div> <!--page-name-->
     
             
            
      <div class="card-container">
            @foreach (var post in posts)
            {
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="data:image/jpeg;base64," alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">@post.Postid</h5>
          <p class="card-text">@post.PostBody</p>
          <a href="#" class="btn btn-primary" onclick="@ApprovePost(post.Postid.ToString())">Accept</a>
          <a href="" class="btn btn-danger">Decline</a>
        </div>  <!--card-body-->
      </div>   <!--card-->
  
        }
        </div> <!--card-container-->
</body>
</section>



@code {
    private bool showNavBar = true;
    private List<PostForApprovalDto>? posts = new List<PostForApprovalDto>();
    private string apiURL_Get = "http://localhost:5004/api/post/approval";
    private string apiURL_PatchApprove = "http://localhost:5004/api/post/approval/"; //postid/trueorFalse;
                                                                                     // HttpClient http = new HttpClient();

    private async Task ApprovePost(string PostID)
    {

        var approvalValue = true;

        // Construct the URL with query parameters
        var url = $"http://localhost:5004/api/post/approval/{PostID}/{approvalValue}";

        // Send a GET request (assuming your API handles this format with a GET request)
        var response = await http.GetAsync(url);

        // Check the response status
        if (response.IsSuccessStatusCode)
        {
            // Request was successful
            // You can handle the response content or other logic here
            Console.WriteLine("Request Success 200 OK");
        }
        else
        {
            // Request failed
            // You can handle errors or other logic here
            Console.WriteLine("Request Failed 401 BAD");
        }
    }

    protected override async Task OnInitializedAsync()
    {
        posts = await http.GetFromJsonAsync<List<PostForApprovalDto>>(apiURL_Get);
        await base.OnInitializedAsync();
        this.StateHasChanged();
    }

    
}
